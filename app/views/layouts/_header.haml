/ Fixed navbar
%nav.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      %button.navbar-toggle.collapsed{"aria-controls" => "navbar", "aria-expanded" => "false", "data-target" => "#navbar", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to t('views.top_menu.brand'), root_path, class: 'navbar-brand'

    #navbar.navbar-collapse.collapse
      %ul.nav.navbar-nav
        %li{class: ('active' if current_page?(root_path))}
          = link_to t('views.top_menu.home_link_text'), root_url
        - if current_user
          %li{class: ('active' if current_page?(personal_account_tasks_path))}
            = link_to t('views.top_menu.account_link_text'), personal_account_tasks_path

      %ul.nav.navbar-nav.navbar-right
        - if current_user
          %li
            = link_to t('views.top_menu.log_out_link_text'), session_path, method: :delete
        - else
          %li
            = link_to t('views.top_menu.log_in_link_text'), new_session_path

